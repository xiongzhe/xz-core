<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!--弹窗-->
    <style name="dialog" parent="@android:style/Theme.Dialog">
        <!--去掉边框-->
        <item name="android:windowFrame">@null</item>
        <!--悬浮-->
        <item name="android:windowIsFloating">true</item>
        <!--半透明-->
        <item name="android:windowIsTranslucent">false</item>
        <!--不需要标题-->
        <item name="android:windowNoTitle">true</item>
        <!--背景透明-->
        <item name="android:windowBackground">@android:color/transparent</item>
        <!--允许模糊-->
        <item name="android:backgroundDimEnabled">true</item>
        <!--全屏幕-->
        <item name="android:windowFullscreen">true</item>
        <!--点击不消失-->
        <item name="android:windowCloseOnTouchOutside">false</item>
    </style>

    <!--从下往上弹窗-->
    <style name="anim_panel_up_from_bottom" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">@anim/push_bottom_in</item>
        <item name="android:windowExitAnimation">@anim/push_bottom_out</item>
    </style>

    <!-- ToolBar菜单样式 -->
    <style name="ToolbarTheme" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="actionMenuTextColor">@color/white</item> <!--颜色-->
        <item name="android:textSize">@dimen/sp18</item> <!--字体大小-->
        <item name="colorControlNormal">@color/white</item> <!-- 溢出菜单图标颜色-->
        <item name="overlapAnchor">false</item>  <!--设置不覆盖锚点-->
    </style>
    <!-- 主题色按钮样式 -->
    <style name="appThemeButton" parent="AppTheme">
        <item name="buttonStyle">@style/Widget.AppCompat.Button.Colored</item>
        <item name="colorControlHighlight">@color/white</item>
    </style>
</resources>